<h1>#<%= @recipe.id %> <%= @recipe.title %></h1>


<table class="table table-hover">
  <tr>
    <td>Serving</td>
    <td><%= @recipe.servings %></td>
  </tr>
  <tr>
    <td>Ingredients</td>
    <td>
      <ul>
      <% @recipe.ingredients.each do |ingredient|%>
        <li><%= ingredient.name %></li>
      <% end %>
      </ul>
    </td>
  </tr>
  <tr>
    <td>Course</td>
    <td><%= @recipe.course.title %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= @recipe.description %></td>
  </tr>
</table>